{
    "label": "Custom Setup",
    "order": -999,
    "settings": {
        "build": {
            "root": "<%= buildRoot %>",
            "scripts": "<%= buildRoot %>/<%= buildScripts %>",
            "css": "<%= buildRoot %>/<%= buildStyles %>",
            "fonts": "<%= buildRoot %>/<%= buildFonts %>",
            "images": "<%= buildRoot %>/<%= buildImages %>"
        },

        "resource": {
            "root": "<%= resourceRoot %>",
            "fonts": "<%= resourceRoot %>/<%= resourceFonts %>",
            "images": "<%= resourceRoot %>/<%= resourceImages %>",
            "icons": "<%= resourceRoot %>/<%= resourceIcons %>",
            "sketch": "<%= resourceRoot %>/<%= resourceSketch %>"
        },

        "source": {
            "root": "<%= sourceRoot %>",
            "scripts": "<%= sourceRoot %>/<%= sourceScripts %>",
            "less": "<%= sourceRoot %>/<%= sourceLess %>",
            "sass": "<%= sourceRoot %>/<%= sourceSass %>"
        },

        "dependencies": {
            "path": "<%= vendor %>",
            "shim": {},
            "map": {
                "less": {},
                "sass": {},
                "fonts": {},
                "scripts": {},
                "images": {}
            },
            "extensions": {
                "scripts": ["js"],
                "less": ["less", "css"],
                "sass": ["sass", "css"],
                "fonts": ["woff", "eot", "ttf", "svg"],
                "images": ["png", "jpg", "svg", "gif"]
            },
            "replace": {
                "scripts": {},
                "less": {},
                "sass": {},
                "images": {}
            }
        },

        "style": {
            "language": "<%= styleLanguage %>",
            "combine-media-queries": true,
            "optimize": true,
            "browsers": [
                "ie > 7",
                "Firefox > 3.5",
                "chrome > 9",
                "safari > 5"
            ],
            "files": [
                "<%= projectName %>"
            ]
        },

        "images": {
            "types": "png,jpg,jpeg,gif,svg,ico"
        },

        "fonts": {
            "engine": "node",
            "iconFontName": "IconFont",
            "families": {
                "FontFamilyOne": {
                    "normal": {
                        "200": "font-src/FontOne-Light.ttf",
                        "400": "font-src/FontOne-Regular.ttf",
                        "700": "font-src/FontOne-Bold.ttf"
                    },
                    "italic": {
                        "200": "font-src/FontOne-LightItalic.ttf",
                        "400": "font-src/FontOne-RegularItalic.ttf",
                        "700": "font-src/FontOne-BoldItalic.ttf"
                    }
                },
                "FontFamilyTwo": {
                    "normal": {
                        "400": "font-src/FontTwo-Regular.ttf"
                    }
                }
            }
        },

        "scripts": {
            "jshint": true,
            "log": false,
            "comments": "some",
            "compress": true,
            "copy": [],
            "concat": []
        }

    }
}

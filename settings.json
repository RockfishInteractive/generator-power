{
    "settings": {
        "environment": "dev",
        "debug": true,
        "styleLang": "less",
        "vendorPath": "vendor",

        "dependencies": {
            "shim": {
                "flexslider": [
                    "flexslider.less",
                    "jquery.flexslider.js",
                    "fonts/*"
                ],
                "leaflet": [
                    "dist/leaflet.css",
                    "dist/leaflet.js",
                    "dist/images/*"
                ],
                "q": "q.js"
            },
            "map": {
                "less":{
                    "normalize-css/normalize.css": "normalize.less",
                    "leaflet/dist/leaflet.css": "leaflet.less"
                },
                "sass": {
                    "normalize-css/normalize.css": "_normalize.scss",
                    "leaflet/dist/leaflet.css": "_leaflet.scss"
                },
                "fonts":{},
                "scripts": {},
                "images":{ }
            },
            "extensions": {
                "scripts": ["js"],
                "less": ["less","css"],
                "sass": ["sass","css"],
                "fonts": ["woff","eot","ttf","svg"],
                "images": ["png","jpg","svg","gif"]
            },
            "replace": {
                "scripts": {},
                "less": {
                    "flexslider": {
                        "url\\('fonts/": "url('/assets/fonts/vendor/flexslider/"
                    },
                    "leaflet": {
                        "url\\(images/": "url(/assets/images/vendor/leaflet/"
                    }
                },
                "sass": {},
                "images": {}
            }
        },

        "css":{
            "images": "../images",
            "fonts": "../fonts",
            "files": [
                "main"
            ]
        },

        "images":{
            "types": "png,jpg,jpeg,gif,svg,ico"
        },

        "fonts": {
            "engine": "fontforge",
            "iconFontName": "IconFont",
            "families":{
                "OpenSans": {
                    "normal": {
                        "200": "OpenSans/OpenSans-Light.ttf",
                        "400": "OpenSans/OpenSans-Regular.ttf",
                        "600": "OpenSans/OpenSans-SemiBold.ttf",
                        "700": "OpenSans/OpenSans-Bold.ttf"
                    },
                    "italic": {
                        "200": "OpenSans/OpenSans-LightItalic.ttf",
                        "400": "OpenSans/OpenSans-Italic.ttf",
                        "600": "OpenSans/OpenSans-SemiBoldItalic.ttf",
                        "700": "OpenSans/OpenSans-BoldItalic.ttf"
                    }
                }
            }
        },

        "scripts": {
            "copy": [],
            "concat": [],
            "require":{
                "useAlmond": true,
                "config": "config.js",
                "name": "main",
                "out": "main.js",
                "exclude": [],
                "preserve": []
            },
            "dependencies": []
        },

        "build": {
            "root": "public",
            "scripts": "public/assets/scripts",
            "css": "public/assets/css",
            "fonts": "public/assets/fonts",
            "images": "public/assets/images",
            "templates": "public/assets/templates"
        },

        "resources": {
            "root": "resources",
            "fonts": "resources/fonts",
            "images": "resources/images",
            "icons": "resources/icons",
            "sketch": "resources/sketch"
        },

        "source": {
            "root": "source",
            "scripts": "source/scripts",
            "less": "source/less",
            "sass": "source/sass",
            "templates": "source/templates"
        }
    }
}
